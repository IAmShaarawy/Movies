<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.elshaarawy.movies.MoviesMainActivity"
    tools:showIn="@layout/activity_movies_main">

    <FrameLayout
        android:id="@+id/mainFragmentLand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/title_bg"></FrameLayout>

    <FrameLayout
        android:id="@+id/detailsFragmentLand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#dddddd">

            <TextView
                android:id="@+id/landscapePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="[Select Movie to show Details]"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
